@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["DetailedCheck"] = "false";
    ViewData["ManufacturerCheck"] = "false";
    ViewData["ProductDefinitionCheck"] = "true";
    ViewData["ProductCheck"] = "false";
    ViewData["SearchCheck"] = "false";
    ViewData["DataLoadCheck"] = "false";
}


<div class="container">
    <div class="row m-3">
        <div class="col-8">
            <h1 class="m-0">Product Definition</h1>
        </div>
        <div class="col-2">
            <a class="btn btn-primary w-100" asp-action="Add" asp-controller="ProductDefinition">Create</a>
        </div>
        <div class="col-2">
            <a class="btn btn-primary w-100" asp-action="DataLoadSource" asp-controller="BulkDataLoad">Excel Yüklemesi</a>
        </div>
    </div>
    <div class="row m-3">
        <div class="shadow-sm rounded bg-white p-3">
            <div id="qpl-qplmain-datagrid"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            window.qpl.pages.productDefinition.init({ grid: "#qpl-qplmain-datagrid" });
        });
    </script>
}
