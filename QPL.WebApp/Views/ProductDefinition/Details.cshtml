@using QPL.BL.Models;
@using QPL.WebApp.Models.ProductDefinition;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ProductDefinition


<div class="container">
    <div class="row m-3">
        <div class="col-12">
            <h1 class="m-0">Product Definition Details</h1>
        </div>
    </div>
    <div class="row m-3">
        <div class="shadow-sm rounded bg-white p-3 col-6">
            <ul class="list-group mb-3">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3 text-start fw-bold">Netaş CPC</div>
                        <div class="col-9 text-start">@Model.CPC</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3 text-start fw-bold">Nortel CPC</div>
                        <div class="col-9 text-start">@Model.NortelCpc</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3 text-start fw-bold">Entry Date</div>
                        <div class="col-9 text-start">@Model.CreatedDate</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3 text-start fw-bold">Modify Date</div>
                        <div class="col-9 text-start">@Model.UpdatedDate</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3 text-start fw-bold">ROHS Status</div>
                        <div class="col-9 text-start">@Model.RoshStatus</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3 text-start fw-bold">Package Type</div>
                        <div class="col-9 text-start">@Model.PackageType</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3 text-start fw-bold">Eng. Code</div>
                        <div class="col-9 text-start">@Model.EngineeringCode</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3 text-start fw-bold">Concept</div>
                        <div class="col-9 text-start">@Model.Concept</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3 text-start fw-bold">Description</div>
                        <div class="col-9 text-start">@Model.Description</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3 text-start fw-bold">Comments</div>
                        <div class="col-9 text-start">@Model.Comments</div>
                    </div>
                </li>
			</ul>
			<div class="row">
				<div class="col-4 text-start">
                    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="DetailedSearch"><i class="fa fa-caret-left"></i> Detaylı Arama</a>
				</div>
				<div class="col-8 text-end">
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="ProductDefinition" asp-route-id="@Model.Id"><i class="fa fa-edit"></i> Edit</a>
				</div>
			</div>
        </div>
    </div>
    <div class="row m-3">
        <div class="shadow-sm rounded bg-white p-3">
            <div class="row mb-3">
                <div class="col-10">
                    <h4 class="m-0">Products</h4>
                </div>
                <div class="col-2">
                    <a class="btn btn-primary w-100" asp-action="Add" asp-controller="Product" asp-route-id="@Model.Id">Create Product</a>
                </div>
            </div>
            <div id="qpl-productDefinition-products-datagrid"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            window.qpl.pages.productDefinition.initDetails({
                grid: "#qpl-productDefinition-products-datagrid"
            }, @Model.Id);
        });
    </script>
}
