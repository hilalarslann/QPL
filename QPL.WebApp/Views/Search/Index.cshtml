
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["DetailedCheck"] = "false";
    ViewData["ManufacturerCheck"] = "false";
    ViewData["ProductDefinitionCheck"] = "false";
    ViewData["ProductCheck"] = "false";
    ViewData["SearchCheck"] = "true";
    ViewData["DataLoadCheck"] = "false";
}


<div class="container">
    <div class=" row m-3">
        <div class="col-10">
            <h1 class="m-0">Search</h1>
        </div>
    </div>
    <div class="container shadow-sm rounded bg-white p-5 mb-5">
        <form id="search-form">
            <div id="dxForm" class="mb-3"></div>
            <div class="row">
                <div class="col-md-12">
                </div>
            </div>
       
            <div class="col-3">
                <button class="btn btn-primary" id="save" type="submit">Ara</button>
                <a class="btn btn-primary" asp-action="ExcIndex" asp-controller="Search">Excel Yüklemesi
                </a>
      
            </div>
          
            <div class="row justify-content-end">
            </div>
        </form>
        <br />
        <div id="qpl-search-datagrid"></div>
    </div>
</div>






@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            window.qpl.pages.search.init({
                editForm: "#search-form",
                editFormDx: "#search-form #dxForm",
                grid: "#qpl-search-datagrid",
                saveBtn: "#search-form #save",
                excBtn: "#search-form #exc"
            });
        });
    </script>
}
